.message{data: {message: {id: message.id}}}
.chat-main__message-list__message-box
  .chat-main__message-list__message-box__create-info
    .chat-main__message-list__message-box__create-info__user-name
      = message.user.name
    .chat-main__message-list__message-box__create-info__create-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__message-box__message
    - if message.content.present?
      %p.chat-main__message-list__message-box__message__content
        = message.content
    = image_tag message.image.url, class: 'chat-main__message-list__message-box__message__image' if message.image.present?