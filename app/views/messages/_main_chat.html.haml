.chat-main
  .chat-main__group-info
    .chat-main__group-info__group-name
      = @group.name
    .chat-main__group-info__members-name
      Member:
      - @group.users.each do |user|
        = user.name
    = link_to edit_group_path(@group), class: "chat-main__group-info__edit-group" do
      Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message],html: {class: "chat-main__message-form__new-message"} do |f|
      = f.text_field :content, class: 'chat-main__message-form__new-message__message', placeholder: 'type a message'
      .chat-main__message-form__new-message__mask
        = f.label :image, class: 'chat-main__message-form__new-message__mask__image' do
          = icon('fas', 'image', class: 'chat-main__message-form__new-message__mask__image__icon')
          = f.file_field :image, class: 'chat-main__message-form__new-message__mask__image__hidden'
      = f.submit 'Send', class: 'chat-main__message-form__new-message__submit'